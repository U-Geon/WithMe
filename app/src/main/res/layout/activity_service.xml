<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/serviceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity"
    android:paddingBottom="30dp">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment">
    </androidx.fragment.app.FragmentContainerView>
    <SlidingDrawer
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/slider"
        android:handle="@+id/slideBar">
        <LinearLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/slider">
            <View
                android:id="@+id/slideBar"
                android:layout_width="110dp"
                android:layout_height="4dp"
                android:background="@drawable/bar"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출발 장소"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/destination"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="60dp"
                        android:text="a"/>
                    <EditText
                        android:id="@+id/startInput"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="80dp"
                        android:hint="목적지 입력"
                        android:textSize="7pt"
                        android:textColor="#999999"
                        android:background="#00ff0000"
                        />
                    <Button
                        android:id="@+id/startButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="#00ff0000"
                        android:text="a"
                        android:layout_marginRight="50dp" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="어느 병원으로 가시겠어요?"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/destination"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="60dp"
                        android:text="a"/>
                    <EditText
                        android:id="@+id/hospitalInput"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="80dp"
                        android:hint="목적지 입력"
                        android:textSize="7pt"
                        android:textColor="#999999"
                        android:background="#00ff0000"
                        />
                    <Button
                        android:id="@+id/hospitalButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="#00ff0000"
                        android:text="a"
                        android:layout_marginRight="50dp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도착 장소"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/destination"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="60dp"
                        android:text="a"/>
                    <EditText
                        android:id="@+id/endInput"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="80dp"
                        android:hint="목적지 입력"
                        android:textSize="7pt"
                        android:textColor="#999999"
                        android:background="#00ff0000"
                        />
                    <Button
                        android:id="@+id/endButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="#00ff0000"
                        android:text="a"
                        android:layout_marginRight="50dp" />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/submitButton"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:text="동행 신청하기"
                style="@style/MyButtonStyle"
                />
        </LinearLayout>
    </SlidingDrawer>
</RelativeLayout>