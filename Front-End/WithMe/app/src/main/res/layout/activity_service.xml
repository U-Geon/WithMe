<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/serviceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity"
    android:paddingBottom="30dp">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment">
    </androidx.fragment.app.FragmentContainerView>

    <LinearLayout
        android:id="@+id/checkView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bar_background"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="출발 장소로 선택하신 위치가 맞나요?"/>
        <TextView
            android:id="@+id/checkNameText"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="8pt"
            android:text="출발 위치 이름"
            />
        <TextView
            android:id="@+id/checkAddressText"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="출발 위치 주소"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/finalSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_layout"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:text="예"/>
            <Button
                android:id="@+id/closeCheckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_layout"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:text="아니요"/>
        </LinearLayout>

    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:allowSingleTap="true"
        android:layout_marginTop="100dp"
        android:content="@+id/slider"
        android:handle="@+id/slideBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@id/slideBar"
            android:background="@drawable/bar_background"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:background="@drawable/bar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/slider"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="출발 장소"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <View
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/destination" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="60dp"
                        android:text="a" />

                    <TextView
                        android:id="@+id/startInput"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="80dp"
                        android:background="#00ff0000"
                        android:hint="목적지 입력"
                        android:textColor="#999999"
                        android:textSize="7pt" />

                    <Button
                        android:id="@+id/startButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="50dp"
                        android:background="#00ff0000"
                        android:text="a" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="어느 병원으로 가시겠어요?"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <View
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/destination" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="60dp"
                        android:text="a" />

                    <TextView
                        android:id="@+id/hospitalInput"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="80dp"
                        android:background="#00ff0000"
                        android:hint="목적지 입력"
                        android:textColor="#999999"
                        android:textSize="7pt" />

                    <Button
                        android:id="@+id/hospitalButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="50dp"
                        android:background="#00ff0000"
                        android:text="a" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="도착 장소"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <View
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/destination" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="60dp"
                        android:text="a" />

                    <TextView
                        android:id="@+id/endInput"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="80dp"
                        android:background="#00ff0000"
                        android:hint="목적지 입력"
                        android:textColor="#999999"
                        android:textSize="7pt" />

                    <Button
                        android:id="@+id/endButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="50dp"
                        android:background="#00ff0000"
                        android:text="a" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submitButton"
                style="@style/MyButtonStyle"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:text="동행 신청하기" />
        </LinearLayout>
    </SlidingDrawer>
</RelativeLayout>